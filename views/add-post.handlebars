<article class="new-page">
    <section class="new-form-page">
        <div class="form-heading">
            <h2>Create New Looking For Post</h2>
        </div>
        <div class="form-section text-center">
            <form class="new-post-form" id="upload_form" enctype="multipart/form-data">
