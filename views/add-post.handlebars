                    <label for="post-title" id="login">Title</label>
                    <input type="text" id="post-title" name="post_title" placeholder="what are you looking for?"/>
                </div>
                <div class="post-content">
                    <label for="post-content" id="login">Description</label>
                    <textarea class="entry-field" id="post-content" name="post_content" placeholder="describe the item you are looking for!"></textarea>
                </div>
                <div class="post-content">
                    <label for="post-content" id="login">Image</label>
                    {{!-- <div action="/profile" method="post" enctype="multipart/form-data"> --}}
                    <input type="file" name="avatar" id="upload"/>
                    </div>
                </div>
                <button type="submit" class="btn" id="create-new-post">+ Create +</button>
            </form>
        </div>
    </section>
</article>

